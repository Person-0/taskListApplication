{
  "compilerOptions": {
    "outDir": "./dist-server",
    "rootDir": "./server",
    "strict": true,
    "target": "ESnext",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "noEmit": true,
    "allowImportingTsExtensions": true,
    "lib": [
      "ES2021"
    ]
  },
  "include": [
    "server/**/*",
  ]
}